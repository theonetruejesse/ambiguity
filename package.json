{
  "name": "my-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "bun run dev:all",
    "dev:all": "bun run --parallel dev -w",
    "build": "bun run build:all",
    "build:all": "bun run --parallel build -w"
  }
}
