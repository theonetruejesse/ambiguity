generator client {
    provider        = "prisma-kysely"
    previewFeatures = ["prismaSchemaFolder"]
    output          = "../../src/server/database"
    fileName        = "db.types.ts"
}

// breaks railway deployment
generator erd {
    provider        = "prisma-erd-generator"
    previewFeatures = ["prismaSchemaFolder"]
    output          = "../ERD.svg"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}
