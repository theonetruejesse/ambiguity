{
  "name": "@repo/manipulator",
  "private": true,
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    "./clients/vanilla": {
      "types": "./src/clients/vanilla/index.ts",
      "require": "./dist/clients/vanilla/index.js",
      "import": "./dist/clients/vanilla/index.mjs"
    },
    "./clients/next": {
      "types": "./src/clients/next/index.tsx",
      "require": "./dist/clients/next/index.js",
      "import": "./dist/clients/next/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "clean": "rm -rf dist",
    "db:generate": "prisma migrate dev",
    "db:create": "prisma migrate dev --create-only",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@trpc/client": "11.0.0-rc.700",
    "@trpc/react-query": "11.0.0-rc.700",
    "@trpc/server": "11.0.0-rc.700",
    "client-only": "^0.0.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "kysely": "^0.27.5",
    "luxon": "^3.5.0",
    "pg": "^8.13.1",
    "prisma-kysely": "^1.8.0",
    "server-only": "^0.0.1",
    "source-map-support": "^0.5.21",
    "superjson": "^2.2.2",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@tanstack/query-core": "^5.64.1",
    "@tanstack/react-query": "^5.64.1",
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/core": "^1.10.7",
    "@swc/helpers": "^0.5.15",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.6",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.18",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "prisma": "^6.1.0",
    "ts-loader": "^9.5.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  }
}
