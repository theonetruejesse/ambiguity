{
  "compilerOptions": {
    "target": "ES2020",                    // or "ES6", "ES2022", etc.
    "module": "CommonJS",                  // CJS output so Node can run without extension changes
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",            // typical for Node-based projects
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
